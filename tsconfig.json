{
    "include": [
        "src/ts/**/*"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "build/types",
        "baseUrl": ".",
        "paths": {
            "cannon" : ["src/lib/cannon/cannon"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false
    }
}